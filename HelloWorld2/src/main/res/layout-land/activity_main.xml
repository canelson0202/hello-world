<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.connornelson.helloworld2.helloworld2.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click Me!"
        android:id="@+id/button"
        android:accessibilityLiveRegion="polite"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:padding="30dp"
        android:singleLine="false"
        android:textSize="@android:dimen/app_icon_size"
        android:textStyle="bold"
        android:typeface="serif"
        android:onClick="buttonOnClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        style="@android:style/Animation.Toast"
        android:focusableInTouchMode="false"
        android:fontFamily="@android:string/VideoView_error_text_invalid_progressive_playback"
        android:height="100dp"
        android:shadowColor="@android:color/darker_gray"
        android:textColor="#ff081b"
        android:textStyle="bold"
        android:typeface="serif"
        android:textAppearance="@android:color/tertiary_text_dark" />
</RelativeLayout>
